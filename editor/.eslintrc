{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jquery": true
  },
  "extends": [
      "standard",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "dollar-sign",
      "jquery"
  ],
  "rules": {
    "@typescript-eslint/no-namespace": ["error", { "allowDeclarations": true }],
    "no-use-before-define": "off"
  }
}
